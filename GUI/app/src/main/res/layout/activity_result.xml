<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#14151E"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/result_img"
                android:layout_width="match_parent"
                android:layout_height="213dp"
                android:layout_margin="20dp"
                android:src="@drawable/camera" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:text="분류"
                android:textColor="#8F8FA1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/Time_ChipGroup"
                    android:layout_width="366dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/breakfast_chip"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="아침"
                        android:textColor="#FFFFFF"
                        app:chipBackgroundColor="#14151E"
                        app:chipStrokeColor="#8F8FA1"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/lunch_chip"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="점심"
                        android:textColor="#FFFFFF"
                        app:chipBackgroundColor="#14151E"
                        app:chipStrokeColor="#8F8FA1"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/dinner_chip"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="저녁"
                        android:textColor="#FFFFFF"
                        app:chipBackgroundColor="#14151E"
                        app:chipStrokeColor="#8F8FA1"
                        app:chipStrokeWidth="1dp" />
                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="음식"
                android:id="@+id/result_foodTextview"
                android:textColor="#8F8FA1" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/cal_chipgroup"
                        style="@style/Widget.MaterialComponents.Chip.Entry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="20dp"
                        app:singleSelection="true">

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/inbun_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="인분"
                android:textColor="#8F8FA1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/inbun_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/inbun025chip"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1/4인분"
                        android:textColor="#FFFFFF"
                        app:chipBackgroundColor="#14151E"
                        app:chipStrokeColor="#8F8FA1"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/inbun05chip"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/2인분"
                        android:textColor="#FFFFFF"
                        app:chipBackgroundColor="#14151E"
                        app:chipStrokeColor="#8F8FA1"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/inbun01chip"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1인분"
                        android:textColor="#FFFFFF"
                        app:chipBackgroundColor="#14151E"
                        app:chipStrokeColor="#8F8FA1"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/inbun20chip"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2인분"
                        android:textColor="#FFFFFF"
                        app:chipBackgroundColor="#14151E"
                        app:chipStrokeColor="#8F8FA1"
                        app:chipStrokeWidth="1dp" />

                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/total_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="음식칼로리: 000cal\n총섭취칼로리: 000cal"
                android:textColor="#CCCCDB" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:text="시간"
                android:textColor="#8F8FA1" />

            <TextView
                android:id="@+id/result_daytextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="오전 09:12"
                android:textColor="#CCCCDB" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:text="메모"
                android:textColor="#8F8FA1" />

            <EditText
                android:id="@+id/result_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:background="@null"
                android:hint="간단한 메모를 남겨주세요.(선택)"
                android:paddingLeft="20dp"
                android:textColor="#CCCCDB"
                android:textColorHint="#5C5C72"
                android:textSize="14dp" />

            <Button
                android:id="@+id/exerciseSavebtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="저장하기"
                app:backgroundTint="#262949" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>