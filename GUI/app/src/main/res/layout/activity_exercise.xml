<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/exerciseframe"
    android:background="#14151E">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="운동 제목"
                android:textColor="#8F8FA1"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/exercise_title_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="제목을 입력해주세요"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textColor="#5C5C72"
                android:textColorHint="#5C5C72"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="운동 시작 시간"
                android:textColor="#8F8FA1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/starttimeText"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.6"
                    android:text=""
                    android:textColor="#8F8FA1"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/starttimeButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.4"
                    android:backgroundTint="#14151E"
                    android:text="시간 선택"
                    android:textColor="#8F8FA1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="운동 끝난 시간"
                android:textColor="#8F8FA1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/finishtimeText"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.6"
                    android:text=""
                    android:textColor="#8F8FA1"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/finishtimeButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.4"
                    android:backgroundTint="#14151E"
                    android:text="시간 선택"
                    android:textColor="#8F8FA1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="총 운동 시간"
                android:textColor="#8F8FA1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totaltimeText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#8F8FA1"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/totaltimeButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.4"
                    android:backgroundTint="#14151E"
                    android:text="시간 계산"
                    android:textColor="#8F8FA1" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="내용"
                android:textColor="#8F8FA1" />

            <EditText
                android:id="@+id/eye_body_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="운동 내용을 입력해주세요"
                android:inputType="textMultiLine|textNoSuggestions"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textColor="#5C5C72"
                android:textColorHint="#5C5C72"
                android:textSize="14sp" />

            <Button
                android:id="@+id/exerciseSavebtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="저장하기"
                app:backgroundTint="#262949" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>