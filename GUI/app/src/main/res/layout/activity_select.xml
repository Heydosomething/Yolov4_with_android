<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/select_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="헬스 리포트"
                android:textColor="#CCCCDB"
                android:textSize="20sp" />

            <Button
                android:id="@+id/Food_add_btn"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#3D3E4B"
                android:gravity="center"
                android:text="음식\n\n음식 사진을 찍어보세요"
                android:textColor="#CCCCDB"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Exercise_add_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="#3D3E4B"
                android:gravity="center"
                android:text="운동\n\n운동량을 기록하세요"
                android:textColor="#CCCCDB"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Body_add_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="#3D3E4B"
                android:gravity="center"
                android:text="신체\n\n프로필을 작성해주세요"
                android:textColor="#CCCCDB"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Water_add_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="#3D3E4B"
                android:gravity="center"
                android:text="물\n\n물 섭취량을 기록하세요"
                android:textColor="#CCCCDB"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>