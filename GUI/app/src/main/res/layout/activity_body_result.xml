<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bodyresult"
    android:background="#14151E">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="신체 정보"
                android:textColor="#8F8FA1"
                android:textSize="20sp" />

            <TextView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="체중"
                android:textColor="#8F8FA1"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/weight_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="체중을 입력해주세요."
                android:paddingLeft="40dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#8F8FA1"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="#575656"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="체지방"
                android:textColor="#8F8FA1"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/Body_fat_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="체지방을 입력해주세요."
                android:background="@null"
                android:paddingLeft="40dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#8F8FA1"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="#575656"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="골격근량"
                android:textColor="#8F8FA1"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/Skeletal_muscle_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="골격근량을 입력해주세요"
                android:background="@null"
                android:paddingLeft="40dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#8F8FA1"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="#575656"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="눈바디"
                android:textColor="#8F8FA1"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/eye_body_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="눈바디를 입력해주세요."
                android:background="@null"
                android:paddingLeft="40dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#8F8FA1"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="#575656"
                android:layout_marginBottom="10dp"
                />

            <Button
                android:id="@+id/exerciseSavebtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="저장하기"
                app:backgroundTint="#262949" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>